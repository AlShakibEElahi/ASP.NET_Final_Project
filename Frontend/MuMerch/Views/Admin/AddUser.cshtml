
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>Add</h2>
<form method="post">
    Name:<br /><input type="text" name="Name" /><br />
    <span class="text-danger">@Html.ValidationMessage("Name")</span><br />
    Date of Birth:<br /><input type="date" name="DateOfBirth" /><br />
    <span class="text-danger">@Html.ValidationMessage("DateOfBirth")</span><br />
    Blood Group:<br /><select class="form-control" name="BloodGroup">
        <option selected disabled>Select</option>
        <option value="A+">A+</option>
        <option value="A-">A-</option>
        <option value="B+">B+</option>
        <option value="B-">B-</option>
        <option value="AB+">AB+</option>
        <option value="AB-">AB-</option>
        <option value="O+">O+</option>
        <option value="O-">O-</option>
    </select>
    <span class="text-danger">@Html.ValidationMessage("BloodGroup")</span><br />
    Password:<br /><input type="password" name="Password" /><br />
    <span class="text-danger">@Html.ValidationMessage("Password")</span><br />
    Email:<br /><input type="text" name="Email" /><br />
    <span class="text-danger">@Html.ValidationMessage("Email")</span><br />
    PhoneNo:<br /><input type="text" name="PhoneNo" /><br />
    <span class="text-danger">@Html.ValidationMessage("PhoneNo")</span><br />
    User Type:<br /><select class="form-control" name="UserType">
        <option selected disabled>Select</option>
        <option value="Admin">Admin</option>
        <option value="Employee">Employee</option>
        <option value="BandManager">Band Manager</option>
        <option value="Gig Manager">GigManager</option>
    </select>
    <span class="text-danger">@Html.ValidationMessage("UserType")</span><br />
    <input type="submit" class="btn btn-success" value="Add" />

</form>

